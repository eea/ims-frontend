{
  "name": "ims-frontend",
  "description": "IMS: Volto Frontend",
  "license": "MIT",
  "version": "3.2.0",
  "addons": [
    "@eeacms/volto-sentry-rancher-config",
    "@eeacms/volto-corsproxy",
    "@eeacms/volto-depiction",
    "@eeacms/volto-taxonomy",
    "@eeacms/volto-object-widget",
    "@eeacms/volto-widgets-view",
    "@eeacms/volto-widget-toggle",
    "@eeacms/volto-widget-temporal-coverage",
    "@eeacms/volto-widget-geolocation",
    "volto-slate:asDefault",
    "@eeacms/volto-slate-metadata-mentions",
    "@eeacms/volto-slate-footnote",
    "@eeacms/volto-slate-zotero",
    "@eeacms/volto-matomo",
    "@eeacms/volto-accordion-block",
    "@eeacms/volto-block-toc",
    "@eeacms/volto-block-divider",
    "@eeacms/volto-block-data-figure",
    "@eeacms/volto-listing-block",
    "@eeacms/volto-metadata-block",
    "@eeacms/volto-group-block",
    "@eeacms/volto-columns-block",
    "@eeacms/volto-workflow-progress",
    "@eeacms/volto-editing-progress",
    "@eeacms/volto-resize-helper",
    "@eeacms/volto-block-style",
    "@eeacms/volto-ims-theme",
    "@eeacms/volto-ims-policy"
  ],
  "scripts": {
    "start": "razzle start",
    "postinstall": "yarn omelette && yarn patches",
    "omelette": "ln -sf node_modules/@plone/volto/ omelette",
    "patches": "./patches/patchit.sh",
    "build": "razzle build",
    "test": "./node_modules/jest/bin/jest.js --env=jsdom --passWithNoTests src/addons --verbose",
    "start:prod": "NODE_ENV=production node build/server.js",
    "i18n": "NODE_ENV=production node node_modules/@plone/volto/src/i18n.js",
    "update": "./scripts/update.sh"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "api"
    ],
    "transform": {
      "^.+\\.js(x)?$": "babel-jest",
      "^.+\\.css$": "jest-css-modules",
      "^.+\\.scss$": "jest-css-modules",
      "^.+\\.(png)$": "jest-file",
      "^.+\\.(jpg)$": "jest-file",
      "^.+\\.(svg)$": "./node_modules/@plone/volto/jest-svgsystem-transform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@plone/volto).+\\.js$"
    ],
    "moduleNameMapper": {
      "@plone/volto/babel": "<rootDir>/node_modules/@plone/volto/babel",
      "@plone/volto/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "load-volto-addons": "<rootDir>/node_modules/@plone/volto/jest-addons-loader.js",
      "@package/(.*)$": "<rootDir>/src/$1",
      "~/(.*)$": "<rootDir>/src/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFiles": [
      "@plone/volto/test-setup-globals.js",
      "@plone/volto/test-setup-config.js"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    },
    "ignoreFiles": "theme/themes/default/**/*.overrides"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie 11",
    "not dead"
  ],
  "engines": {
    "node": "^10 || ^12 || ^14"
  },
  "dependencies": {
    "@eeacms/volto-accordion-block": "3.4.1",
    "@eeacms/volto-block-data-figure": "4.4.3",
    "@eeacms/volto-block-divider": "2.1.3",
    "@eeacms/volto-block-style": "3.4.5",
    "@eeacms/volto-block-toc": "2.2.2",
    "@eeacms/volto-columns-block": "4.4.5",
    "@eeacms/volto-corsproxy": "2.1.2",
    "@eeacms/volto-depiction": "0.1.2",
    "@eeacms/volto-editing-progress": "0.1.5",
    "@eeacms/volto-group-block": "4.3.0",
    "@eeacms/volto-ims-policy": "1.0.4",
    "@eeacms/volto-ims-theme": "2.9.5",
    "@eeacms/volto-listing-block": "0.1.2",
    "@eeacms/volto-matomo": "2.0.2",
    "@eeacms/volto-metadata-block": "3.3.1",
    "@eeacms/volto-object-widget": "3.0.0",
    "@eeacms/volto-resize-helper": "0.2.4",
    "@eeacms/volto-sentry-rancher-config": "2.1.2",
    "@eeacms/volto-slate-footnote": "3.2.0",
    "@eeacms/volto-slate-metadata-mentions": "3.0.2",
    "@eeacms/volto-slate-zotero": "3.0.0",
    "@eeacms/volto-taxonomy": "2.0.2",
    "@eeacms/volto-widget-geolocation": "3.0.3",
    "@eeacms/volto-widget-temporal-coverage": "3.0.2",
    "@eeacms/volto-widget-toggle": "2.2.3",
    "@eeacms/volto-widgets-view": "3.0.0",
    "@eeacms/volto-workflow-progress": "2.3.7",
    "@plone/volto": "14.0.0-alpha.2",
    "volto-slate": "3.1.0"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.3",
    "prettier": "2.0.5",
    "stylelint": "13.3.3",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2"
  }
}
